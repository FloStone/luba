{
    "name": "flo5581/luba",
    "description": "Small PHP Framework",
    "version": "0.1",
    "authors": [
        {
            "name": "Flo Stone"
        }
    ],
    "require": {
        "Flo5581/Lubaframework": "1.0.*",
        "Lubaaddons/Exceptionhandler": "1.0.*",
        "Flo5581/mysql": "1.1.*"
    },
    "autoload": {
        "psr-4": {
            "Luba\\Controllers\\": "controllers/"
        },
        "files": [
            "config/config.php",
            "config/global.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php luba copy-config",
            "php luba clear-compiled"
        ],
        "post-update-cmd": [
            "php luba clear-compiled"
        ]
    }
}
